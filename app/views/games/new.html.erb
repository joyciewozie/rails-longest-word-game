<head>
  <link rel="stylesheet" href="/app/assets/stylesheets/new.css">
</head>

<body>
  <div class="container">
    <ul>
      <% @grid.each do |grid| %>
        <li><%= grid.capitalize %></li>
      <% end %>
    </ul>
  <!--On submit, send the form-data to the score page-->
    <p>What's the longest word you can find?</p>
    <form action="/score" method="post" data-turbo="false">
      <input type="text" name="guess" placeholder="Type in a word">
      <input type="submit" value="Play">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :grid, @grid %>
      <!-- ... -->
    </form>
  </div>
</body>
